            </TransformGroup>
        </LinearGradientBrush.RelativeTransform>
        <GradientStop Color="#3953AE" Offset="1.0"/>
        <GradientStop Color="#32458B" Offset="0.2"/>
        <GradientStop Color="#28345D" Offset="0.0"/>
    </LinearGradientBrush>
    
